###################
# SCREEN TIME OUT #
###################
exec_always --no-startup-id xset dpms 200

#########
# AUDIO #
#########
bindsym XF86AudioPlay exec --no-startup-id "playerctl play-pause"
bindsym XF86AudioRaiseVolume exec --no-startup-id vol-up1; exec --no-startup-id click1 #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id vol-down1; exec --no-startup-id click1 #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse sset Master toggle; exec --no-startup-id click1 #mute sound


